<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0.75dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_holder"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/holder_comic_detail_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/holder_comic_detail_cover"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/holder_comic_detail_chapter_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_newest_item_title"
                android:ellipsize="end"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:padding="4dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/holder_comic_detail_chapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:tag="Hover"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/holder_comic_detail_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="12sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>