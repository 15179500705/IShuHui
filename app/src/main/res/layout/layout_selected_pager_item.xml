<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0.75dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/holder_selected_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:text="dasdsadsad"
            android:textSize="24sp"
            android:textColor="#000000" />
        <FrameLayout
            android:id="@+id/holder_selected_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/holder_selected_name"
            android:layout_above="@+id/holder_selected_intro">
            <ImageView
                android:id="@+id/holder_selected_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/holder_selected_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_newest_item_title"
                android:ellipsize="end"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:padding="4dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/holder_selected_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/holder_selected_author"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:text="dsadsadasd"/>

        <TextView
            android:id="@+id/holder_selected_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:text="dsadsadasd"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>